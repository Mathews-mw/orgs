<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:fillViewport="true">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.ProductDetailsActivity">

    <ImageView
      android:id="@+id/activity_product_details_image"
      android:layout_width="0dp"
      android:layout_height="200dp"
      android:contentDescription="Imagem do produto"
      android:scaleType="centerCrop"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
      android:id="@+id/activity_product_details_valor"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:background="@drawable/plano_fundo_arredondado"
      android:elevation="10dp"
      android:fontFamily="@font/montserrat_bold"
      android:paddingHorizontal="16dp"
      android:paddingVertical="8dp"
      android:text="TextView"
      android:textColor="@android:color/holo_green_dark"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/activity_product_details_image"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_product_details_image"
      tools:text="R$ 1299,99" />

    <TextView
      android:id="@+id/activity_product_details_nome"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:fontFamily="@font/montserrat_bold"
      android:paddingHorizontal="16dp"
      android:text="TextView"
      android:textSize="22sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_product_details_valor"
      app:layout_constraintVertical_bias="0.0"
      tools:text="@tools:sample/lorem[10]" />

    <TextView
      android:id="@+id/activity_product_details_descricao"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      android:paddingHorizontal="16dp"
      android:text="TextView"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_product_details_nome"
      tools:text="@tools:sample/lorem/random" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
